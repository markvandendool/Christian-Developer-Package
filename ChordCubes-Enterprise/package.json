{
  "name": "chordcubes",
  "version": "1.5.0",
  "description": "3D chord visualization system with WebGL/Three.js and Web Audio",
  "main": "src/main.js",
  "scripts": {
    "start": "http-server -p 3000 -c-1",
    "dev": "http-server -p 3000 -c-1 -o",
    "build": "node build/build.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "cypress run",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "docs": "jsdoc -c jsdoc.json",
    "deploy:dev": "node scripts/deploy.js --env=development",
    "deploy:staging": "node scripts/deploy.js --env=staging",
    "deploy:prod": "node scripts/deploy.js --env=production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChordCubes/ChordCubes-Enterprise.git"
  },
  "keywords": [
    "music",
    "chords",
    "3D",
    "visualization",
    "WebGL",
    "Three.js",
    "Web Audio"
  ],
  "author": "Mark van den Dool",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ChordCubes/ChordCubes-Enterprise/issues"
  },
  "homepage": "https://github.com/ChordCubes/ChordCubes-Enterprise#readme",
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "babel-jest": "^29.5.0",
    "cypress": "^12.16.0",
    "eslint": "^8.43.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "http-server": "^14.1.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdoc": "^4.0.2",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "three": "^0.153.0",
    "tone": "^14.7.77",
    "tweenjs": "^1.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/vendor/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
